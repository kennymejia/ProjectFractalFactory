<!--
Description: HTML for login page. Displays login options such as through Marist CAS, Facebook, Twitter,
             and simple user/password login. Also allows users to register an account associated with
             the aforementioned methods.
Contributor(s): Kenny Mejia
-->

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link href="css/login.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Long+Cang&display=swap" rel="stylesheet">
        <title>Login</title>
        <link rel="icon" href="/images/favicon.png">
        <script src="js/login.js"></script>
    </head>

    <body>
        <div class="centerDiv">
            <h2 class="ff">FRACTAL FACTORY</h2>
            <h2 class="login">WELCOME</h2>
            <div class="centerDiv">
                <!--The following messages div will only display text if messages are available-->
                <div id="messages" <%if (loginMessage.message) {%> style="color:<%=loginMessage.color%>" <% }%> >
                    <% if (messages.error) { %>
                        <%= messages.error%>
                    <% }%>

                    <% if (loginMessage.message) { %>
                        <%= loginMessage.message%>
                    <% }%>
                </div>

                <form action="/login" method="POST">    
                    <div class="container">
                        <label for="username"><b>Username</b></label>
                        <input type="text" placeholder="Enter Username" name="username" required>
                        <label for="password"><b>Password</b></label>
                        <input type="password" placeholder="Enter Password" name="password" required>
                        <button type="submit">Login</button>
                        <div class="centerDiv"><p class="or">- OR -</p></div>
                        <button class="submit" onclick="document.getElementById('id02').style.display='block'">Register</button>
                    </div>
                </form>

                <div class="right">
                    <button class="maristbtn" onclick="document.getElementById('id03').style.display='block'" style="width:auto;">Marist Login</button>
                    <button class="facebookbtn" onclick="document.getElementById('id04').style.display='block'" style="width:auto;">Facebook Login</button>
                    <button class="twitterbtn" onclick="document.getElementById('id05').style.display='block'" style="width:auto;">Twitter Login</button>
                </div>

                <form action="/about" method="GET">
                    <button class="btn" type="submit">About</button>
                </form>
            </div>

            <div id="id02" class="modal">
                <form class="modal-content animate" action="/register" method="POST">
                    <div class="imgcontainer">
                        <span onclick="document.getElementById('id02').style.display='none'" class="close" title="Close Modal">&times;</span>
                        <img src="/images/localLogo.png" alt="Avatar" class="avatar">
                    </div>

                    <div class="container">
                        <div>
                            <label for="username">Username</label>
                            <input type="text" name="username" required>
                        </div>
                        <div>
                            <label for="password">Password</label>
                            <input type="password" name="password" required>
                        </div>
                        <div>
                            <label for="firstName">First Name</label>
                            <input type="text" name="firstname" required>
                        </div>
                        <div>
                            <label for="lastName">Last Name</label>
                            <input type="text" name="lastname">
                        </div>
                        <div>
                            <label for="email">Email</label>
                            <input type="email" name="email" required>
                        </div>
                    </div>

                    <div class="container" style="background-color:#f1f1f1">
                        <button type="submit">Register</button>
                    </div>
                </form>
            </div>

            <div id="id03" class="modal">
                <form class="modal-content animate" action="/auth/cas" method="GET">
                    <div class="imgcontainer">
                        <span onclick="document.getElementById('id03').style.display='none'" class="close" title="Close Modal">&times;</span>
                        <img src="/images/maristLogo.png" alt="Avatar" class="avatar">
                    </div>
                    <div class="container">
                        <button type="submit">Marist Login</button>
                    </div>
                </form>
            </div>

            <div id="id04" class="modal">
                <form class="modal-content animate" action="/auth/facebook" method="GET">
                    <div class="imgcontainer">
                        <span onclick="document.getElementById('id04').style.display='none'" class="close" title="Close Modal">&times;</span>
                        <img src="/images/facebookLogo.png" alt="Avatar" class="avatar">
                    </div>
                    <div class="container">
                        <button type="submit">Facebook Login</button>
                    </div>
                </form>
            </div>

            <div id="id05" class="modal">
                <form class="modal-content animate" action="/auth/twitter" method="GET">
                    <div class="imgcontainer">
                        <span onclick="document.getElementById('id05').style.display='none'" class="close" title="Close Modal">&times;</span>
                        <img src="/images/twitterLogo.png" alt="Avatar" class="avatar">
                    </div>
                    <div class="container">
                        <button type="submit">Twitter Login</button>
                    </div>
                </form>
            </div>

            <p id="disclaimer">By signing up or logging in, you agree to our
                <a target="_blank" href="http://www.marist.ai/ts">Terms of Use</a>  and our
                <a target="_blank" href="http://www.marist.ai/pp">Privacy Policy</a>.
            </p>

        </div>
    </body>
</html>